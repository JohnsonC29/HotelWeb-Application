        </dependencies>
        <configuration>
          <tasks>
            <exec executable="cmd">
              <arg value="/c" />
              <arg value="E:/UatOfWs/CLI_WiproStyle/WS_CLI_2012/bin/ws.bat -srcPath G:/Maven_Eclipse/application -configFile E:/UatOfWs/CLI_WiproStyle/WS_CLI_2012/CSWS.xml" />
